{
  "version": "0.1",
  "llm": {
    "default_workflow": "fast",
    "workflows": {
      "fast": {
        "provider": "azure",
        "model": "gpt-4.1",
        "temperature": 0.2
      },
      "reasoning": {
        "provider": "azure",
        "model": "gpt-5",
        "temperature": 0.8
      },
      "local": {
        "provider": "ollama",
        "model": "gemma3:1b",
        "temperature": 0.3
      }
    },
    "timeouts": {
      "request_seconds": 30,
      "retry_attempts": 3,
      "retry_backoff_seconds": 2
    },
    "enable_debug": false
  },
  "memory": {
    "redis": {
      "host": "localhost",
      "port": 6379,
      "db": 5,
      "ttl_seconds": 900
    },
    "chromadb": {
      "persist_directory": "data/chromadb",
      "collection": "drm_memory"
    }
  },
  "review": {
    "enabled": true,
    "auto_reviewer_model": "gpt-4.1",
    "auto_reviewer_provider": "azure"
  },
  "embedding": {
    "provider": "azure",
    "model": "text-embedding-3-large"
  },
  "telemetry": {
    "log_level": "INFO"
  }
}
